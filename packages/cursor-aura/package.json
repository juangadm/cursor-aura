{
  "name": "cursor-aura",
  "version": "0.1.0",
  "description": "Themed cursor shadows for the web",
  "author": "Juan Gabriel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juangabriel/cursor-aura.git"
  },
  "homepage": "https://aura.juangabriel.xyz",
  "keywords": [
    "cursor",
    "shadow",
    "theme",
    "react",
    "css",
    "ui"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./vanilla": {
      "import": {
        "types": "./dist/vanilla/index.d.ts",
        "default": "./dist/vanilla/index.js"
      },
      "require": {
        "types": "./dist/vanilla/index.d.cts",
        "default": "./dist/vanilla/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2"
  }
}
